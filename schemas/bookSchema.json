{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Book Schema",
  "required": [
    "isbn",
    "amazon_url",
    "author",
    "language",
    "pages",
    "publisher",
    "title",
    "year"
  ],
  "properties": {
    "isbn": {
      "$id": "#/properties/isbn",
      "type": "string",
      "title": "The Isbn Schema",
      "default": "",
      "examples": ["0691161518"],
      "pattern": "^(.*)$"
    },
    "amazon_url": {
      "$id": "#/properties/amazon_url",
      "type": "string",
      "title": "The Amazon_url Schema",
      "default": "",
      "examples": ["http://a.co/eobPtX2"],
      "pattern": "^(.*)$",
      "format": "uri"
    },
    "author": {
      "$id": "#/properties/author",
      "type": "string",
      "title": "The Author Schema",
      "default": "",
      "examples": ["Matthew Lane"],
      "pattern": "^(.*)$"
    },
    "language": {
      "$id": "#/properties/language",
      "type": "string",
      "title": "The Language Schema",
      "default": "",
      "examples": ["english"],
      "pattern": "^(.*)$"
    },
    "pages": {
      "$id": "#/properties/pages",
      "type": "integer",
      "title": "The Pages Schema",
      "default": 0,
      "examples": [264]
    },
    "publisher": {
      "$id": "#/properties/publisher",
      "type": "string",
      "title": "The Publisher Schema",
      "default": "",
      "examples": ["Princeton University Press"],
      "pattern": "^(.*)$"
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "The Title Schema",
      "default": "",
      "examples": ["Power-Up: Unlocking Hidden Math in Video Games"],
      "pattern": "^(.*)$"
    },
    "year": {
      "$id": "#/properties/year",
      "type": "integer",
      "title": "The Year Schema",
      "default": 0,
      "examples": [2017]
    }
  }
}
